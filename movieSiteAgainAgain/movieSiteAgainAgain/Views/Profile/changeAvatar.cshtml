@{
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/plugins.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<section class="vh-100 bg-image">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3" style="background-image:url(../images/uploads/slider-bg.jpg)">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;font:menu;color:#5E6F74;background-color:#141823">
                        <div class="card-body p-5" style="border-radius: 15px;background-color:#141823">
                            <h2 class="text-uppercase text-center mb-5">Change your Avatar</h2>
                            @if (ViewBag.Message != null)
                            {
                                <span style="color:orangered">@Html.Raw(ViewBag.Message)</span>
                            }
                            <form asp-controller="Profile" asp-action="changeAvatarDatabase" enctype="multipart/form-data">
                                @*try mm*@

                                <div class="form-outline mb-4">
                                    <label class="form-label">Your Image</label>
                                    <input type="file" style="background-color:#2C3440" name="img_file"/>
                                    
                                </div>
                                <div class="d-flex justify-content-center">
                                    <button type="submit"
                                            class="btn btn-success btn-block btn-lg gradient-custom-4 text-body"
                                            style="background-color:green;color:white;border-color:white;font-size:medium;font-weight:bolder">
                                        Change
                                    </button>
                                </div>
                              
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<style>
    .gradient-custom-3 {
        /* fallback for old browsers */
        background: #84fab0;
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to right, #092f71, #081630);
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right, #092f71, #081630);
    }

    .gradient-custom-4 {
        /* fallback for old browsers */
        background: #84fab0;
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to right, #092f71, #081630);
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: #1c5fd2
    }
</style>